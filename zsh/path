typeset -U path

# prepend to $PATH
path=(
    "$HOME/.n/bin"
    "$HOME/bin"
    "$HOME/local"
    "$HOME/.local/bin"
    "$HOME/.rbenv/shims"
    "$HOME/.rbenv/bin"
    "$HOME/Library/Python/3.6/bin"

    $path
)

# append to $PATH
path+=(
    "/usr/local/sbin"
    "/usr/local/bin"
    "/usr/sbin"
    "/usr/bin"
    "/sbin"
    "/bin"
    "$HOME/google-cloud-sdk/bin"
    "$GOPATH/bin"
)
export PATH
