### python (pip, virtualenv, etc.)
export WORKON_HOME=$HOME/.virtualenvs
export PROJECT_HOME=$HOME/projects
export PIP_REQUIRE_VIRTUALENV=true
export VIRTUALENVWRAPPER_PYTHON=/usr/local/bin/python3


export CLICOLOR=1
export BLOCK_SIZE=human-readable # https://www.gnu.org/software/coreutils/manual/html_node/Block-size.html
export HISTSIZE=500000
export SAVEHIST=100000
export HISTFILE=~/.zsh_history

## GOLANG
export GOPATH=$HOME/projects/gocodes

## locale
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

### zsh-autoenv
export AUTOENV_FILE_ENTER=.autoenv.zsh
export AUTOENV_FILE_LEAVE=.autoenv.zsh
export AUTOENV_HANDLE_LEAVE=1

### homebrew
# reduce how often homebrew updates when running commands
# used in conjunction with domt4/autoupdate
export HOMEBREW_AUTO_UPDATE_SECS="86400"
