root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4
indent_style = space

[*.rs]
indent_size = 4

[*.json]
indent_size = 2
indent_style = space

[*.{yaml,yml}]
indent_size = 2
indent_style = space

[*.charset]
insert_final_newline = false

[*.css]
indent_size = 2
indent_style = space

[*.html]
indent_size = 2
indent_style = space

[.txt]
indent_size = 2
indent_style = space
